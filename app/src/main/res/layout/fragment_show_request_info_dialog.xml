<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.admin.dialogs.ShowRequestInfoDialogFragment">

    <TextView
        android:id="@+id/request_title_text"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textview_box"
        android:fontFamily="@font/amiri"
        android:hint="@string/konu"
        android:importantForAutofill="no"
        android:paddingStart="20dp"
        android:paddingEnd="2dp"
        android:textColor="@color/primary_color"
        android:textColorHint="@color/primary_color"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/request_type_text"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/textview_box"
        android:fontFamily="@font/amiri"
        android:hint="@string/turu"
        android:importantForAutofill="no"
        android:paddingStart="20dp"
        android:paddingEnd="5dp"
        android:textColor="@color/primary_color"
        android:textColorHint="@color/primary_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/request_content_text"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/textview_box"
        android:fontFamily="@font/amiri"
        android:gravity="start"
        android:hint="@string/content"
        android:textSize="18sp"
        android:importantForAutofill="no"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:textColor="@color/primary_color"
        android:textColorHint="@color/primary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/request_title_text" />

    <ImageView
        android:id="@+id/imageOfRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/request_content_text"
        tools:src="@tools:sample/avatars"
        android:contentDescription="@string/todo" />

</androidx.constraintlayout.widget.ConstraintLayout>