<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/service_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/electric_icon"
        android:layout_marginBottom="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:background="@drawable/recycleview_background">

        <LinearLayout
            android:id="@+id/service_info_linearLayout"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/service_name_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/title"
                android:textSize="22sp"
                android:paddingTop="15dp"
                android:textColor="@color/primary_color"
                android:textColorHint="@color/primary_color"
                android:fontFamily="@font/titillium_web_bold"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/service_owner_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/content"
                    android:textSize="16sp"
                    android:lines="1"
                    android:textColorHint="@color/primary_color"
                    android:fontFamily="@font/titillium_web"
                    android:textColor="@color/primary_color"
                    android:paddingStart="30dp"
                    android:paddingEnd="1dp"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/phoneNumberText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:drawableTint="@color/primary_color"
        android:drawablePadding="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/primary_color"
        android:hint="@string/phone_number"
        app:drawableStartCompat="@drawable/phone_icon" />

</LinearLayout>
</LinearLayout>