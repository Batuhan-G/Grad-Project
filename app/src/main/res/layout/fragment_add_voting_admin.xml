<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddVotingAdminFragment">

    <Button
        android:id="@+id/backButtonVoting"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/back_green_button"
        android:drawableStart="@drawable/back_arrow_green_icon"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/voteIcon"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/assessment_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/titillium_web_bold"
        android:text="@string/new_voting"
        android:textColor="@color/primary_color"
        android:textSize="38sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButtonVoting" />

    <View
        android:id="@+id/view"
        android:layout_width="130dp"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:background="@color/primary_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainTitle" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="@string/title"
        android:textColor="@color/primary_color"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <EditText
        android:id="@+id/title_text"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/recycleview_background"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:hint="@string/baslik_ekle"
        android:textColorHint="@color/primary_color"
        android:fontFamily="@font/titillium_web"
        android:inputType="text"
        android:textColor="@color/primary_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:ignore="SpeakableTextPresentCheck,EditableContentDescCheck,DuplicateSpeakableTextCheck"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="@string/iÃ§erik"
        android:textColor="@color/primary_color"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <EditText
        android:id="@+id/content_text"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/recycleview_background"
        android:fontFamily="@font/titillium_web"
        android:hint="@string/Icerik_ekle"
        android:textColorHint="@color/primary_color"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:lines="3"
        android:textColor="@color/primary_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content"
        tools:ignore="EditableContentDescCheck,DuplicateSpeakableTextCheck"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="@string/surec"
        android:textColor="@color/primary_color"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_text" />

    <EditText
        android:id="@+id/duration_text"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/recycleview_background"
        android:contentDescription="@string/title"
        android:fontFamily="@font/titillium_web"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textColor="@color/primary_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duration"
        tools:ignore="SpeakableTextPresentCheck,EditableContentDescCheck,DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="@string/gun"
        android:textColor="@color/primary_color"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/duration_text"
        app:layout_constraintStart_toEndOf="@+id/duration_text" />

    <Button
        android:id="@+id/shareVotingButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/primary_color"
        android:text="@string/share"
        android:textColor="@color/secondary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />




</androidx.constraintlayout.widget.ConstraintLayout>
</layout>