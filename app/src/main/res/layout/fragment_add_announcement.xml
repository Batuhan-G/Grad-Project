<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".view.admin.AddAnnouncementFragment">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/titillium_web_bold"
            android:gravity="center"
            android:text="@string/add_new_announcement"
            android:textColor="@color/primary_color"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/titleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:autofillHints=""
                android:background="@color/transparent"
                android:backgroundTint="@color/secondary_color"
                android:hint="@string/title"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/secondary_color"
                android:textColorHint="@color/secondary_color"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/contentInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:autofillHints=""
                android:background="@color/transparent"
                android:backgroundTint="@color/secondary_color"
                android:gravity="top"
                android:hint="@string/content"
                android:inputType="textMultiLine"
                android:lines="5"
                android:padding="10dp"
                android:textColor="@color/secondary_color"
                android:textColorHint="@color/secondary_color" />

            <TextView
                android:id="@+id/takePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#3EFFFFFF"
                android:drawablePadding="10dp"
                android:fontFamily="@font/titillium_web"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/take_photo"
                android:textAlignment="center"
                android:textColor="@color/secondary_color"
                android:textSize="17sp"
                app:drawableStartCompat="@drawable/camera_icon" />

            <ImageView
                android:id="@+id/selectPicture"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/picture_icon" />
        </LinearLayout>

        <Button
            android:id="@+id/shareAnnouncementButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="65dp"
            android:background="@drawable/button"
            android:backgroundTint="@color/primary_color"
            android:text="@string/share"
            android:textColor="@color/secondary_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintVertical_bias="0.847"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>