<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Admin.HomePageAdminActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary_color"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/notification_icon" />
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="@string/ap"
            android:textSize="40sp"
            android:fontFamily="@font/title_font"
            android:textColor="@color/secondary_color"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="127dp" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="65dp"
            android:fontFamily="@font/titillium_web"
            android:text="@string/account_name"
            android:textColor="@color/secondary_color"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/account_icon"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/todo" />
"

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary_color"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary_color"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/homeClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:fontFamily="@font/titillium_web"
            android:textColor="@color/secondary_color"
            android:drawablePadding="-3dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="10dp"
            app:drawableTopCompat="@drawable/county_icon" />

        <TextView
            android:id="@+id/announcementClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/announcements"
            android:textColor="@color/secondary_color"
            android:fontFamily="@font/titillium_web"
            android:layout_gravity="center"
            android:drawablePadding="-3dp"
            android:layout_marginStart="20dp"
            app:drawableTopCompat="@drawable/email_icon" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="top"
            android:layout_marginStart="20dp"
            android:background="@drawable/menu_button"
            android:drawableStart="@drawable/menu_icon"
            android:paddingStart="10dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/residentsClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_color"
            android:text="@string/resident"
            android:fontFamily="@font/titillium_web"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:drawablePadding="-3dp"
            app:drawableTopCompat="@drawable/resident_s_icon" />

        <TextView
            android:id="@+id/expendituresClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_color"
            android:text="@string/expenditures"
            android:fontFamily="@font/titillium_web"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:drawablePadding="-3dp"
            app:drawableTopCompat="@drawable/expenditure_icon" />

    </LinearLayout>
</LinearLayout>