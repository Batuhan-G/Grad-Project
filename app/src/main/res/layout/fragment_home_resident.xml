<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeResidentFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/main_icon_soft">

        <TextView
            android:id="@+id/myDebtText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/titillium_web_bold"
            android:text="@string/borcum"
            android:textColor="@color/primary_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view4"
            android:layout_width="270dp"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:background="@color/primary_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myDebtText" />

        <TextView
            android:id="@+id/my_requestsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/titillium_web_bold"
            android:text="@string/taleplerim"
            android:textColor="@color/primary_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myDebtText" />

        <View
            android:id="@+id/view5"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginStart="63dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="63dp"
            android:background="@color/primary_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_requestsText" />

        <View
            android:id="@+id/view2"
            android:layout_width="270dp"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:background="@color/primary_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expendituresText" />

        <TextView
            android:id="@+id/expendituresText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/titillium_web_bold"
            android:text="@string/expenditures"
            android:textColor="@color/primary_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_requestsText" />

        <TextView
            android:id="@+id/myDebtAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="75dp"
            android:fontFamily="@font/titillium_web"
            android:hint="-"
            android:textColor="@color/primary_color"
            android:textSize="24sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/myDebtText"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/myRequestsAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="75dp"
            android:fontFamily="@font/titillium_web"
            android:hint="-"
            android:textColor="@color/primary_color"
            android:textSize="24sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/my_requestsText"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/expendituresAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="75dp"
            android:fontFamily="@font/titillium_web"
            android:hint="-"
            android:textColor="@color/primary_color"
            android:textSize="24sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/expendituresText"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </FrameLayout>
</layout>